
{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 500,
    "title": "Annual Renewable Energy Mix In Europe",
    "data": {
      "url": "https://raw.githubusercontent.com/Jason1205-ui/fit3179/main/dataset/pie_chart_data.csv"
    
    },
    "params": [
      
      {
        "name": "Year_selection",
        "value": 2010,
        "bind": {
          "input": "range",
          "min": 2010,
          "max": 2019,
          "step": 1,
          "name": "Year:  "
        }
      }
    ],
  
  
    "transform": [
      {"filter": "datum.year == Year_selection"}
   
  
    ],
    
  "encoding": {
      "theta": {
      "field": "percentage",
      "type": "quantitative",
      "stack":true,
      "title": "value",
      "sort": "descending"
      
      },
      "color": {
      "field": "source",
      "title": "Energy Source",
      "type": "nominal",
      "scale": {
          "domain": ["Hydroelectric" , "Solar", "Wind", "Biofuel","Others"]
        }
  
      },
  
      "tooltip": [
          {"field": "percentage", "type": "quantitative", "format": ",.2%", "title": "Value"},
          {"field": "source", "type": "nominal", "title": "Energy Source"},
          {"field": "year", "type": "nominal", "title": "Year"}
      
  
      ]
  },
  "layer": [
      {
        "mark": {
          "type": "arc",
          "innerRadius": 160,
          "outerRadius": 110,
          "stroke": "white",
          "strokeWidth": 2,
          "cursor": "pointer"
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "center",
          "outerRadius": 185,
          "fontSize": 14,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {
            "field": "percentage",
            "type": "quantitative",
            "format": ".2%"
          },
          "opacity": {"value": 1}
        }
      }
      
    ]
        
     
  }
        
    
  
  
  
  